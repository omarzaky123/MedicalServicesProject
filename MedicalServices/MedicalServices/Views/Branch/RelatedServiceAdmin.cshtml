@model List<MedicalService>
@{
    Layout = "Admin/_AdminLayout";
}

<h2 class="name">Services</h2>

<div class="board">
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Prices</td>
                <td>Catigory</td>
            </tr>
        </thead>
        <tbody>

            @foreach (MedicalService service in Model)
            {
                <tr>
                    <td class="title">
                        <div class="text">
                            <h5>@service.Name</h5>
                        </div>
                    </td>
                    <td class="role">
                        <p class="text">@service.Price</p>
                    </td>
                    <td class="role">
                        <p class="text">@(service?.Catigory?.Name ?? "")</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

