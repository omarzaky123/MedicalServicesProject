@model List<Date>
@{
    Layout = "Admin/_AdminLayout";
}
<h2 class="name">Dates</h2>
@if (User.IsInRole("SuperAdmin"))
{
    <div class="new">
        <a class="input-new" asp-action="UpdateDates" asp-controller="Date">Update</a>
    </div>
}


<div class="board">
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>ID</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Date date in Model)
            {
                <tr>
                    <td class="title">
                        <div class="text">
                            <h5>@(date?.AppoinmentDate.ToString()??"The Date Is Not Found")</h5>
                        </div>
                    </td>
                    <td class="role">
                        <p class="text">@(date?.ID??0)</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

