@model BranchGusetService
@{
    Layout = "Admin/_AdminLayout";
}
<h2 class="name">Details</h2>
<div class="board">
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Branch</td>
                <td>Service</td>
                <td>Date</td>
                <td>Remaining Time</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="title">
                    <div class="text">
                        <h5>@(Model?.Guset?.User?.UserName ?? "Not Found")</h5>
                    </div>
                </td>
                <td class="role">
                    <p class="text">@(Model?.Branch?.Name ?? "Not Found")</p>
                </td>
                <td class="role">
                    <p class="text">@(Model?.MedicalService?.Name ?? "Not Found")</p>
                </td>
                <td class="role">
                    <p class="text">@(Model?.DateBranch?.Date?.AppoinmentDate.ToString() ?? "Not Found")</p>
                </td>
                <td class="role">
                    @{
                        TimeSpan? RemainTime = null;
                        if (Model?.DateBranch?.Date?.AppoinmentDate != null)
                        {
                            RemainTime = Model.DateBranch.Date.AppoinmentDate - DateTime.Now;
                        }
                    }
                    @if (RemainTime != null)
                    {
                        <p class="text">@(RemainTime?.Days) Day @(RemainTime?.Hours) hrs @(RemainTime?.Minutes) Min</p>
                    }
                    else
                    {
                        <p class="text">Not Found</p>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>