@model List<BranchGusetService>
@{
    Layout = "Admin/_AdminLayout";
}
<h2 class="name">All Orders</h2>
<div class="sort">
    <select id="sortDropdown" onchange="location = this.value;">
        <option value="@Url.Action("Index", new { Sort = "" })">Sort</option>
        <option value="@Url.Action("Index", new { Sort = "IdDes" })">Recently viewed</option>
        <option value="@Url.Action("Index", new { Sort = "Date" })">Date First</option>
    </select>
</div>
<div class="board">
    <table>
        <thead>
            <tr>
                <td>Name</td>
                <td>Branch</td>
                <td>ID</td>
                <td>Service</td>
                <td>Date</td>
                <td>RemainTime</td>
            </tr>
        </thead>
        <tbody>

            @foreach (BranchGusetService Bgs in Model)
            {
                <tr>
                    <td class="title">
                        <div class="text">
                            <h5>@(Bgs?.Guset?.User?.UserName ?? "Not Found")</h5>
                        </div>
                    </td>
                    <td class="role">
                        <p class="text">@(Bgs?.Branch?.Name ?? "Not Found")</p>
                    </td>
                    <td class="role">
                        <p class="text">@(Bgs?.ID ?? 0)</p>
                    </td>
                    <td class="role">
                        <p class="text">@(Bgs?.MedicalService?.Name ?? "Not Found")</p>
                    </td>
                    <td class="role">

                        <p class="text">@(Bgs?.DateBranch?.Date?.AppoinmentDate.ToString()??"The Date Not exsists")</p>
                    </td>
                    <td class="role">
                        @{
                            DateTime? appointmentDate = Bgs?.DateBranch?.Date?.AppoinmentDate;
                            TimeSpan? RemainTime = null;

                            if (appointmentDate.HasValue)
                            {
                                RemainTime = appointmentDate.Value - DateTime.Now;
                            }
                        }
                        @if (RemainTime.HasValue && RemainTime.Value.Days >= 0 && RemainTime.Value.Hours >= 0 && RemainTime.Value.Minutes >= 0)
                        {
                            <p class="text">@(RemainTime?.Days) Day @(RemainTime?.Hours) hrs @(RemainTime?.Minutes) Min</p>
                        }
                        else
                        {
                            <p class="text">The Date Has Expired</p>
                        }
                    </td>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <td class="control">
                            <p class="text">
                                <a class="delete" asp-action="DeleteAdmin"
                                asp-controller="BranchGusetService"
                                asp-route-id="@Bgs.ID"
                                asp-route-gusetid="@Bgs.GusetID"
                                asp-route-datebranchid="@Bgs.DateBranchID"><i class="fa-solid fa-trash"></i></a>
                            </p>
                        </td>
                    }
                    <td class="control">
                        <p class="text">
                            <a class="detail" asp-action="GetById" asp-route-id="@Bgs.ID">Details</a>
                        </p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="pagination-items">
    @if (ViewBag.Pagination.CurrentPage > 1)
    {
        <div class="pag-item">
            <a asp-action="Index"
               asp-route-CurrentPage="@(ViewBag.Pagination.CurrentPage-1)" asp-route-Sort="@ViewBag.Sort">Privous</a>
        </div>
    }

    @for (int i = 1; i <= ViewBag.Pagination.TotalPages; i++)
    {
        if (i == ViewBag.Pagination.CurrentPage)
        {
            <div class="pag-item active">
                <a asp-action="Index"
                   asp-route-CurrentPage="@i" asp-route-Sort="@ViewBag.Sort">@i</a>
            </div>
        }
        else
        {
            <div class="pag-item">
                <a asp-action="Index"
                   asp-route-CurrentPage="@i" asp-route-Sort="@ViewBag.Sort">@i</a>
            </div>
        }
    }
    @if (ViewBag.Pagination.CurrentPage < ViewBag.Pagination.TotalPages)
    {
        <div class="pag-item">
            <a asp-action="Index"
               asp-route-CurrentPage="@(ViewBag.Pagination.CurrentPage+1)" asp-route-Sort="@ViewBag.Sort">Next</a>
        </div>
    }

</div>
    @if (User.IsInRole("Admin"))
    {
        <input type="hidden" id="branchId" branch-id="@ViewBag.Admin.BranchID" />
    
    }
    @if (User.IsInRole("Assastant"))
    {
    <input type="hidden" id="branchId" branch-id="@ViewBag.Assastant.BranchID" />

    }
    @if (User.IsInRole("Doctor"))
    {
    <input type="hidden" id="branchId" branch-id="@ViewBag.Doctor.BranchID" />
    
    }


@section Scripts{
    <script src="/js/jsadmin/savesortstate.js"></script>
    <script src="/js/jsadmin/searchadmin.js"></script>
    <partial name="_ValidationScriptsPartial"></partial>
}
